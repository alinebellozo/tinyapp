<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) { %>
      <form class="form-inline" action="/logout" method="POST" style="gap: 1.5em;">
        <p class="text-white">Logged in as: <%= user["email"] %></p>
        <button type="submit" class="btn btn-danger">Logout</button>
      </form>
    <% } else { %>
      <form class="form-inline" actio n="/register" method="GET">
        <button type="submit" class="btn btn-outline-dark" style="margin-right: 1.5em">Register</button>
      </form>
      <form class="form-inline" action="/login" method="GET">
        <button type="submit" class="btn btn-danger">Login</button>
      </form>
    <% } %>
  </nav>
</header>